= simple_form_for(@expense) do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2
        = pluralize(@expense.errors.count, "error")
        prohibited this expense from being saved:
      %ul
        - @expense.errors.full_messages.each do |msg|
          %li= msg
  = f.hidden_field :household_id
  .field.clearfix
    = f.input :paid_in, collection: { :'Money spent (on something)' => true, :'Money paid (into the pool)' => false }, wrapper_html: { class: 'pull-left' }, prompt: false, label: false
    = f.label 'by/from', class: 'pull-left'
    = f.input :roommate_id, collection: @expense.household.roommates.collect { |u| ["#{u.first_name} #{u.last_name}", u.id] }, wrapper_html: { class: 'pull-left' }, prompt: false, label: false
    = f.label 'on', class: 'pull-left'
    = f.input :item_name, label: false
  .field.clearfix
    = f.check_box :split_evenly, class: 'pull-left', checked: 'checked'
    = f.label 'Split expense evenly', class: 'pull-left'
  .field
    = f.label :value
    %br/
    $
    = f.text_field :value
  .field
    = f.label :note
    = f.text_area :note
  .actions
    = f.submit
